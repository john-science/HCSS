# Megacathedral, for the beholders on the brink of extinction. Or beyond. (due)

{{
function callback.cathedral_beholders (data, triggerable, triggerer, marker, ev)
  if triggerer.type ~= "turn" or triggerer.sub_type ~= "countdown" then
    return
  end

  if data.beholder_count > 10 then
    return
  end

  local x, y = marker:pos()
  local you_x, you_y = you.pos()

  if (you_x == x and you_y == y) then return end
  if dgn.mons_at(x, y) then return end

  if (not dgn.create_monster(x, y,
          "generate_awake beholder name:megabeholder n_rpl n_spe n_des n_noc tile:mons_megabeholder / " ..
          "generate_awake w:2 fire beholder")) then
    return
  end

  data.beholder_count = data.beholder_count + 1

  if you.see_cell(x, y) then
    crawl.mpr("A beholder flies out of a crevice!")
  end
end
}}

